#include<iostream>

#include <climits>
using namespace std;
void find2small(int arr[],int n ){
    int first ,second;
    if(n<2){
        cout<<"invalide";
        return;
    }
    first=second=INT_MAX;
    for(int i=0;i<n;i++){
        if(arr[i]<first){
            second=first;
            first=arr[i];
        }
        else if( arr[i]<second && arr[i]!=first)
        second=arr[i];
    }
    if(second==INT_MAX)
    cout<<"there is no second largest nu.";
    else
    cout<<"second largest nu. is "<<second<<endl;
}
int main(){
    int arr[]= { 21, 3, 15, 41, 34, 10 };
    int n=sizeof(arr)/sizeof(arr[0]);
    find2small(arr,n);
    return 0;
}
